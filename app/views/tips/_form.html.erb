<div class="container">
  <%= form_for @tip do |f| %>
  <div class="form-group">
    <div class="form-group">
      <%= f.label :city %>
      <%= f.collection_select :city_id, City.order(:name),:id,:name, include_blank: true, selected: @selected_city%>
    </div>
    <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, placeholder: "Title", class: "form-control", autofocus: true %>
    </div>
    <div class="form-group">
    <%= f.label :body %>
    <%= f.text_field :body, placeholder: "Content", class: "form-control", autofocus: true %>
    </div>
    <div class="actions">
    <%= f.submit "Save Post", class: "btn btn-block btn-primary" %>
    </div>
  </div>
  <% end %>
</div>
