<%= form_for @user do |f| %>
  <div class="form-group">
 		<div class="form-group">
    	<%= f.label :first_name %>
      <%= f.text_field :first_name, placeholder: "First Name", class: "form-control", autofocus: true %>
    </div>
    <div class="form-group">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, placeholder: "Last Name", class: "form-control", autofocus: true %>
    </div>
    <div class="form-group">
      <%= f.label :current_city %>
      <%= f.text_field :current_city, placeholder: "Current City" %>
    </div>
    <div class="form-group">
      <%= f.label :profile_image %>
      <%= f.text_field :profile_image, placeholder: "Enter url for your profile image" %>
    </div>
    <div class="form-group">
    	<%= f.label :email %>
      <%= f.text_field :email, placeholder: "Email", autofocus: true, class: "form-control" %>
    </div>
    <div class="form-group" >
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: "Password must be at least 6 characters", class: "form-control" %>
    </div>
    <div class="actions">
			<%= f.submit "Sign Up", class: "btn btn-block btn-primary" %>
    </div>
  </div>
<% end %>

<br>

<p>Already have an account? <%= link_to "Click here", login_path %> to log in.</p>
