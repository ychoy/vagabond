<div class="container">
 <div class = "row">
   <div class="col-md-4">
     <div class="img-thumbnail">
       <%= image_tag @user.profile_image %>
     </div>
     <h3><strong> <%= @user.first_name %> <%= @user.last_name %></strong></h3>
     <p><strong>Date Joined: </strong><%= (@user.created_at).strftime("%m/%d/%Y") %></p>
     <p><strong>City: </strong> <%= @user.current_city %></p>
     <button type="button" class="btn btn-info"><%= link_to "Edit Profile", edit_user_path(@user) %></button>
   </div>

   <div class="col-md-8">
     <% @user.tips.each do |tip| %>
       <h4><%= link_to tip.title, tip_path(tip) %></h4>
       <p><%= tip.body %></p>
     <% end %>
     <br>
   </div>
 </div>
</div>
